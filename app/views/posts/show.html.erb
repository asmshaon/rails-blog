<div class="row">
  <div class="col-lg-9">
    <div class="header">
      <div class="row clearfix">
            <div class="col-sm-10">
              <div class="post-title"><%= @post.title %></div>
            </div>
            <div class="col-sm-2">
              <% if user_signed_in? %>
                  <div class="btn-group pull-right">
                    <%= link_to '', edit_post_path, class: 'fa fa-edit btn btn-primary' %>
                    <%= link_to '', post_path(@post), class: 'fa fa-close btn btn-danger',
                                method: :delete,
                                data: {confirm: 'Are you sure?'} %>
                  </div>
              <% end %>
            </div>
      </div>
      <hr/>
      <p class="blog-post-meta">January 1, 2014 by <a href="#">Mark</a></p>
    </div>
    <div>
      <%= @post.body.html_safe %>
    </div>
    <hr/>
    <div class="comment-section">
      <% if @post.comments.length > 0 %>
          <h4>Comment's by viewers</h4>
      <% else %>
          <h4>No comment posted yet, be the first man!!!</h4>
      <% end %>
      <hr/>
      <%= render @post.comments %>
      <h4>Add a comment:</h4> <hr/>
      <%= render 'comments/form' %>
    </div>
  </div>
  <div class="col-lg-3">
    <%= render 'post_author_details' %>
  </div>
</div>